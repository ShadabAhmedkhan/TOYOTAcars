<Page
    x:Class="Toyota_App.rav4_hybrid"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Toyota_App"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Border BorderThickness="1" BorderBrush="Gray">
            <StackPanel Margin="0,0,0,0"  Height="83" Background="#ededed" VerticalAlignment="Top" HorizontalAlignment="Left"  Orientation="Horizontal" Width="1366">
                <Image Source="logo/download.png" Margin="35,1,0,0" Width="275"/>
                <Button x:ConnectionId='9' Content="Home"  Name="btn_home"                        BorderBrush="#ededed" Foreground="Black" Margin="180,7,0,7" FontFamily="Consolas" FontStyle="Italic" Width="175" FontSize="18" Height="69"/>
                <Rectangle Width="3" Fill="Gray" Height="40" Margin="0,0,0,0" />
                <Button x:ConnectionId='10' Content="Select Vechile"  Name="btn_selectvechile"                                 BorderBrush="#ededed" Foreground="Black" Margin="0,7,0,7" FontFamily="Consolas" FontStyle="Italic" Width="175" FontSize="18" Height="69"/>
                <Rectangle Width="3" Fill="Gray" Height="40" Margin="0,0,0,0" />
                <Button x:ConnectionId='11' Content="Showroom Location" Name="btn_showroom_location"                                     BorderBrush="#ededed" Foreground="Black" Margin="0,7,0,7" FontFamily="Console" FontStyle="Italic" Width="195" FontSize="18" Height="69"/>
                <Rectangle Width="3" Fill="Gray" Height="40" />
                <Button x:ConnectionId='12' Content="Feedback" BorderBrush="#ededed" Foreground="Black" Margin="0,7,0,7" FontFamily="Console" FontStyle="Italic" Width="141" Height="69" FontSize="18" Name="btn_feedback"                            />
                <Rectangle Width="3" Fill="Gray" Height="40" />
                <Button Content="More" BorderBrush="#ededed" Foreground="Black" Margin="0,7,0,7" FontFamily="Console" FontStyle="Italic" Width="141" Height="69" FontSize="18">
                    <Button.Flyout>
                        <MenuFlyout>
                            <MenuFlyoutItem x:ConnectionId='13' Text="Gallery" Name="gallery"                      />
                            <MenuFlyoutSeparator/>
                            
                            <MenuFlyoutItem x:ConnectionId='14' Text="Feature" Name="feature"                      />
                        </MenuFlyout>
                    </Button.Flyout>
                </Button>
            </StackPanel>
        </Border>

        <Image Source="Picture/welcome_mat_hybrid.jpg" Margin="0,85,0,0"  VerticalAlignment="Top"/>
        <StackPanel Margin="0,85,0,0">
            <StackPanel Height="420" Background="White" Margin="0,300,0,0">
                <TextBlock Text="2016 Rav4 HyBrid" Foreground="Red" FontSize="48" 
        FontFamily="Console" FontStyle="Normal" Width="374" VerticalAlignment="Top"
         HorizontalAlignment="Left" Margin="50,30,0,10"/>
                <TextBlock Text="Let's Redefine" Foreground="Black" FontSize="35"
        FontFamily="Console" Width="250" FontStyle="Normal" VerticalAlignment="Top"
        HorizontalAlignment="Left" Margin="50,0,0,0"/>
                <TextBlock Text="what s hybrid can be." Foreground="Black" FontSize="35"
        FontFamily="Console" Width="331" FontStyle="Normal" VerticalAlignment="Top"
        HorizontalAlignment="Left" Margin="50,0,0,0"/>
                <Rectangle x:ConnectionId='1' Height="47" Width="50" Margin="50,40,1266,0" Stroke="Black" Fill="White" Name="white"                      />
                <Rectangle x:ConnectionId='2' Height="47" Width="50" Margin="60,-50,1150,0" Stroke="Black" Fill="#F5F5F5" Name="white1"                       />
                <Rectangle x:ConnectionId='3' Height="47" Width="50" Margin="100,-50,1060,0" Stroke="Black" Fill="#696969" Name="gray"                     />
                <Rectangle x:ConnectionId='4' Height="47" Width="50" Margin="160,-50,990,0" Stroke="Black" Fill="Black" Name="black"                      />
                <Rectangle x:ConnectionId='5' Height="47" Width="50" Margin="160,-50,855,0" Stroke="Black" Fill="DarkRed" Name="darkred"                        />
                <Rectangle x:ConnectionId='6' Height="47" Width="50" Margin="-1090,10,0,0" Stroke="Black" Fill="Blue" Name="blue"                     />
                <Image x:ConnectionId='7' Source="rav4 pics/whitegray.PNG" Height="47" Width="50" Margin="100,-50,1060,0" Name="white_gray"                           />
                <Image x:ConnectionId='8' Source="rav4 pics/blackwhite.PNG" Height="47" Width="50" Margin="160,-50,990,0" Name="black_gray"                           />
                <StackPanel Margin="0,-250,0,0" Width="900" HorizontalAlignment="Right" VerticalAlignment="Top">
                    <Image Source="Picture/rav 4 hybrid.jpg"  Height="258" HorizontalAlignment="Right" Name="rav4_pic" VerticalAlignment="Top" Width="900"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>

